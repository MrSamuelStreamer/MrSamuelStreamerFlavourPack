<?xml version="1.0" encoding="utf-8"?>
<ExampleDefs>
    <!-- This will apply a hediff map-wide at a regular interval -->
    <MSSFP.Defs.MapwideHediffDef>
        <defName>MSSFP_EverybodySleeps</defName>
        <label>Sleepytime</label>

        <!-- The hediff to apply -->
        <hediff>MSS_Tranquilized</hediff>

        <!-- Can this target player pawns -->
        <targetsPlayer>true</targetsPlayer>
        <!-- Can this target animals -->
        <targetsAnimals>false</targetsAnimals>
        <!-- Can this target humanlike -->
        <targetsHumans>false</targetsHumans>
        <!-- Can this target subhuman -->
        <targetsSubHumans>false</targetsSubHumans>
        <!-- Can this target entities -->
        <targetsEntities>false</targetsEntities>
        <!-- Can this target mechs -->
        <targetsMechs>false</targetsMechs>

        <!-- Initial severity for the hediff -->
        <initialSeverity>1</initialSeverity>

        <!-- How often to run the check in ticks -->
        <ticksBetweenChecks>600</ticksBetweenChecks>

        <!-- Override the worker class to allow more complex conditions -->
        <mapwideHediffWorkerClass>MSSFP.Defs.MapwideHediffWorker</mapwideHediffWorkerClass>


