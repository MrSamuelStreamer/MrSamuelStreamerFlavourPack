<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef>
    <defName>MSS_BurnTainted</defName>
    <label>smelt or destroy tainted apparel</label>
    <description>Use heat and strong electromagnets to break down tainted things like weapons and armor into useful resources, or destroy them if they are not smeltable.</description>
    <jobString>Smelting/destroying tainted things.</jobString>
    <workAmount>400</workAmount>
    <smeltingWorkAmount>1600</smeltingWorkAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowNonDeadmansApparel</li>
      </specialFiltersToDisallow>
      <categories>
        <li>Apparel</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>MSS_SmeltOrDestroyBiocoded</defName>
    <label>smelt or destroy biocoded thing</label>
    <description>Use heat and strong electromagnets to break down metallic things like weapons and armor into useful resources, or destroy them if they are not smeltable.</description>
    <jobString>Smelting/destroying things.</jobString>
    <workAmount>400</workAmount>
    <smeltingWorkAmount>1600</smeltingWorkAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Weapons</li>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Weapons</li>
        <li>Apparel</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowNonBiocodedWeapons</li>
        <li>AllowNonBiocodedApparel</li>
      </specialFiltersToDisallow>
      <categories>
        <li>Weapons</li>
        <li>Apparel</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>MSS_Cremate_Rotten</defName>
    <label>cremate rotten corpse</label>
    <description>Cremate rotten human and animal corpses to completely destroy them.</description>
    <jobString>Cremating.</jobString>
    <workAmount>180</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <autoStripCorpses>false</autoStripCorpses>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <specialFiltersToAllow>
        <li MayRequire="Ludeon.RimWorld.Ideology">AllowCorpsesSlave</li>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
      <specialFiltersToDisallow>
        <li>AllowCorpsesColonist</li>
        <li>AllowFresh</li>
      </specialFiltersToDisallow>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>MSS_Cremate_Strangers</defName>
    <label>cremate non-colonist corpse</label>
    <description>Cremate non-colonist and slave corpses to completely destroy them.</description>
    <jobString>Cremating.</jobString>
    <workAmount>180</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <autoStripCorpses>false</autoStripCorpses>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <specialFiltersToAllow>
        <li MayRequire="Ludeon.RimWorld.Ideology">AllowCorpsesSlave</li>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
      <specialFiltersToDisallow>
        <li>AllowCorpsesColonist</li>
      </specialFiltersToDisallow>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef MayRequire="sneaks.recycle">
    <defName>MSS_RecycleTaintedApparel</defName>
    <label>Recycle apparel</label>
    <description>Recycle apparel back to raw resources.</description>
    <jobString>Recycling apparel.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
    <defaultIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowNonDeadmansApparel</li>
      </specialFiltersToDisallow>
    </defaultIngredientFilter>
  </RecipeDef>
</Defs>
