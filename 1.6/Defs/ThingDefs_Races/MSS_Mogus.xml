<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="AnimalThingBase">
        <defName>MSSFP_Mogus</defName>
        <label>mogus</label>
        <description>A mysterious creature that seems to be doing work in and around the colony, but something seems off about it. Some say they can mysteriously travel through steam vents and geysers. Seems sus.</description>
        <statBases>
            <MoveSpeed>3.5</MoveSpeed>
            <MarketValue>750</MarketValue>
            <ComfyTemperatureMin>-30</ComfyTemperatureMin>
            <ComfyTemperatureMax>50</ComfyTemperatureMax>
            <FilthRate>1</FilthRate>
            <Wildness>0</Wildness>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>40</power>
                <cooldownTime>7</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>25</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
        </tools>
        <race>
            <thinkTreeMain>MSSFP_ImpostorBehavior</thinkTreeMain>
            <body>QuadrupedAnimalWithPawsAndTail</body>
            <baseBodySize>0.6</baseBodySize>
            <baseHealthScale>1.0</baseHealthScale>
            <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
            <trainability>Advanced</trainability>
            <petness>1</petness>
            <lifeExpectancy>12000</lifeExpectancy>
            <hasMeat>false</hasMeat>
            <intelligence>Animal</intelligence>
            <manhunterOnDamageChance>0.0</manhunterOnDamageChance>
            <soundEating>Rodent_Eat</soundEating>
            <lifeStageAges>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Hare_Wounded</soundWounded>
                    <soundDeath>Pawn_Hare_Death</soundDeath>
                    <soundCall>Pawn_Hare_Call</soundCall>
                    <soundAngry>Pawn_Hare_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="MSSFP.Comps.CompProperties_Impostor"/>
            <li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VEF.AnimalBehaviours.CompProperties_Draftable">
                <makeNonFleeingToo>true</makeNonFleeingToo>
            </li>
            <li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VEF.AnimalBehaviours.CompProperties_LastStand">
                <finalCoolDownMultiplier>6</finalCoolDownMultiplier>
            </li>
            <li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VEF.AnimalBehaviours.CompProperties_DoesntFlee">

            </li>
            <li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VEF.AnimalBehaviours.CompProperties_NoTamingDecay">

            </li>
        </comps>
    </ThingDef>

