<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <MentalBreakDef>
        <defName>MSSFP_HumanityBreak</defName>
        <label>humanity break</label>
        <intensity>Major</intensity>
        <baseCommonality>1</baseCommonality>
        <workerClass>MentalBreakWorker_HumanityBreak</workerClass>
        <mentalState>HumanityBreak</mentalState>
    </MentalBreakDef>

    <HediffDef>
        <defName>MSS_VoidInsanity</defName>
        <label>void insanity</label>
        <description>This person died and has been brought back. The experience has changed them in unknowable ways.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.7, 0.05, 0.55)</defaultLabelColor>
        <isBad>true</isBad>
        <initialSeverity>1</initialSeverity>
        <minSeverity>0</minSeverity>
        <maxSeverity>1.0</maxSeverity>
        <makesSickThought>false</makesSickThought>
        <tendable>false</tendable>
        <everCurableByItem>false</everCurableByItem>
        <comps>
            <li Class="MSSFP.Hediffs.HediffCompProperties_VoidInsanity">
                <ChanceForMentalBreakPerDay>0.05</ChanceForMentalBreakPerDay>
                <MentalStates>
                    <DarkVisions>0.9</DarkVisions>
                    <InsaneRamblings>0.9</InsaneRamblings>
                    <TerrifyingHallucinations>0.75</TerrifyingHallucinations>
                    <MSSFP_HumanityBreak>0.75</MSSFP_HumanityBreak>
                    <CubeSculpting>0.5</CubeSculpting>
                    <FireTerror>0.5</FireTerror>
                    <Berserk>0.2</Berserk>
                    <FireStartingSpree>0.2</FireStartingSpree>
                    <Binging_DrugExtreme>0.5</Binging_DrugExtreme>
                    <Catatonic>0.5</Catatonic>
                    <Wander_Psychotic>0.5</Wander_Psychotic>
                </MentalStates>
                <ChanceForRandomThought>0.15</ChanceForRandomThought>
                <ThoughtDaysLength>0.25~2</ThoughtDaysLength>
                <RandomThoughts>
                    <MSSFP_Inhumanized>0.7</MSSFP_Inhumanized>
                    <MSSFP_OverHumanized>0.7</MSSFP_OverHumanized>
                    <MSSFP_ExtremeHappiness>0.1</MSSFP_ExtremeHappiness>
                    <MSSFP_ExtremeSadness>0.1</MSSFP_ExtremeSadness>
                    <PsychicRitualVictim>0.5</PsychicRitualVictim>
                    <DarknessLifted>0.3</DarknessLifted>
                    <EmbracedTheVoid>0.3</EmbracedTheVoid>
                    <VoidCuriosity>0.6</VoidCuriosity>
                </RandomThoughts>
<!--                <ChanceForRandomHediff>0.15</ChanceForRandomHediff>-->
<!--                <HediffDaysLength>0.25~2</HediffDaysLength>-->
<!--                <RandomHediff>-->
<!--                    <MSS_Tranquilized>0.5</MSS_Tranquilized>-->
<!--                </RandomHediff>-->
            </li>
        </comps>
        <stages>
            <li>
                <label>whispered</label>
                <minSeverity>0</minSeverity>
            </li>
            <li>
                <label>affected</label>
                <minSeverity>0.25</minSeverity>
            </li>
            <li>
                <label>falling</label>
                <minSeverity>0.5</minSeverity>
            </li>
            <li>
                <label>broken</label>
                <minSeverity>0.75</minSeverity>
            </li>
        </stages>
    </HediffDef>
</Defs>
