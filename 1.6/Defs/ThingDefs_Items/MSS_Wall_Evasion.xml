<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="ApparelNoQualityBase">
        <defName>MSS_SiegeLadder</defName>
        <label>siege ladder</label>
        <description>A crude but effective wooden ladder designed for scaling walls during tribal raids. Takes time to set up and creates a fragile climbable structure that allows passage over walls. The ladder requires an unroofed area on the far side of the wall to be deployed.</description>
        <graphicData>
            <texPath>Things/Building/ladder</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Neolithic</techLevel>
        <tradeTags>
            <li>ExoticMisc</li>
        </tradeTags>
        <statBases>
            <Mass>3.5</Mass>
            <EquipDelay>1</EquipDelay>
            <MarketValue>120</MarketValue>
            <MaxHitPoints>80</MaxHitPoints>
        </statBases>
        <tickerType>Normal</tickerType>
        <thingCategories>
            <li>ApparelUtility</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <scoreOffset>2</scoreOffset>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <ignoredByNonViolent>true</ignoredByNonViolent>
            <wearPerDay>0</wearPerDay>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
            <wornGraphicPath>Things/Building/ladder</wornGraphicPath>
            <wornGraphicData>
                <renderUtilityAsPack>true</renderUtilityAsPack>
                <north>
                    <scale>(0.7,0.7)</scale>
                </north>
                <south>
                    <offset>(0,0.4)</offset>
                    <scale>(0.7,0.7)</scale>
                </south>
                <east>
                    <offset>(-0.35,0)</offset>
                    <scale>(0.85,0.85)</scale>
                </east>
                <west>
                    <offset>(0.35,0)</offset>
                    <scale>(0.85,0.85)</scale>
                </west>
            </wornGraphicData>
        </apparel>
        <costList>
            <WoodLog>35</WoodLog>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>ConstructWood</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>CraftingSpot</li>
                <li>FueledSmithy</li>
                <li>ElectricSmithy</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <tradeNeverStack>true</tradeNeverStack>
        <smeltable>false</smeltable>
        <burnableByRecipe>false</burnableByRecipe>
        <drawGUIOverlay>false</drawGUIOverlay>
        <verbs>
            <li>
                <verbClass>MSSFP.Verbs.Verb_PlaceSiegeLadder</verbClass>
                <label>deploy siege ladder</label>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>true</targetable>
                <onlyManualCast>true</onlyManualCast>
                <requireLineOfSight>false</requireLineOfSight>
                <isPrimary>false</isPrimary>
                <targetParams>
                    <canTargetBuildings>true</canTargetBuildings>
                    <canTargetPawns>false</canTargetPawns>
                    <canTargetLocations>false</canTargetLocations>
                    <canTargetSelf>false</canTargetSelf>
                </targetParams>
                <range>1.9</range>
                <warmupTime>3.0</warmupTime>
                <soundCast>Pawn_Melee_Punch_HitPawn</soundCast>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>1</maxCharges>
                <destroyOnEmpty>true</destroyOnEmpty>
                <hotKey>Misc4</hotKey>
                <chargeNoun>use</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
            <li>
                <compClass>MSSFP.Comps.CompTargetEffect_PlaceSiegeLadder</compClass>
            </li>
        </comps>
    </ThingDef>
</Defs>
