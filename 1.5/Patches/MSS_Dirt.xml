<?xml version="1.0" encoding="UTF-8" ?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="SleepingSpot"]/comps</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="SleepingSpot"]</xpath>
            <value>
                <comps />
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="SleepingSpot"]/comps</xpath>
        <value>
            <li Class="MSSFP.Comps.CompProperties_DirtHaver">
                <dirtExpires>true</dirtExpires>
                <dirtExpireTime>60000</dirtExpireTime>
            </li>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="SleepingSpot"]</xpath>
        <value>
            <tickerType>Normal</tickerType>
        </value>
    </Operation>


